    <script>
        // فلترة المنتجات
        document.querySelectorAll('.filter-btn').forEach(button => {
            button.addEventListener('click', function() {
                document.querySelectorAll('.filter-btn').forEach(btn => {
                    btn.classList.remove('active');
                });
                this.classList.add('active');
                
                // هنا يمكن إضافة منطق الفلترة حسب التصنيف
                const filter = this.textContent;
                alert(`سيتم تصفية المنتجات حسب: ${filter}`);
            });
        });
        
        // تفاعل أزرار المنتجات
        document.querySelectorAll('.btn-primary').forEach(button => {
            button.addEventListener('click', function() {
                const productName = this.closest('.product-card').querySelector('.product-title').textContent;
                alert(`شكراً لاهتمامك بمنتج: ${productName}\nسيتم توجيهك إلى صفحة الطلب`);
            });
        });
        
        document.querySelectorAll('.btn-secondary').forEach(button => {
            button.addEventListener('click', function() {
                const productName = this.closest('.product-card').querySelector('.product-title').textContent;
                alert(`سيتم عرض تفاصيل أكثر عن: ${productName}`);
            });
        });
    </script>
